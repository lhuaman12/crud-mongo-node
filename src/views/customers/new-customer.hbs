            <div class="col form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" value="{{name}}">
            </div>
            <div class="col form-group">
                <label for="name">Apellido</label>
                <input type="text" class="form-control" name="lastname" value="{{lastname}}">
            </div>

        </div>
        <hr class="my-3">
        <div class="row">
            <div class="col form-group">
                <label for="adress">Direccion</label>
                <input type="text" class="form-control" name="adress" id="adress" value="{{adress}}">
            </div>
            <div class="col form-group">
                <label for="city">Localidad</label>
                <input type="text" class="form-control" name="city" id="city" value="city">
            </div>
        </div>
        <hr class="my-3">
        <div class="row">
            <div class="col-6">
                <label for="phone">Telefono</label>
                <input type="text" class="form-control" name="phoneNumber" id="phone" value="{{phoneNumber}}">
            </div>
        </div>
        <hr class="my-3">
        <div class="row">
            <div class="col">
                <label for="productBrand">Marca</label>
                <input type="text" class="form-control" name="productBrand" id="brand" value="{{productBrand}}">
            </div>
            <div class="col">
                <label for="productModel">Modelo</label>
                <input type="text" class="form-control" name="productModel" id="productModel" value="{{productModel}}">
            </div>
        </div>
        <hr class="my-3">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="option1" value="in revision" checked>
            <label class="form-check-label" for="option1">
                En revision
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="option2" value="repaired">
            <label class="form-check-label" for="option2">
                Reparado
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="option3" value="consult">
            <label class="form-check-label" for="exampleRadios3">
                Consulta
            </label>
        </div>
        <input type="hidden" id="repairedDate" name="repairedDate" disabled>
        <hr class="my-3">
        <div class="form-group">
            <label for="obs">Comentarios</label>
            <textarea class="form-control" name="commentary" id="obs" rows="3">{{commentary}}</textarea>
        </div>
        <hr class="my-3">
        <button type="submit" class="btn btn-primary btn-lg">Agregar</button>
        <a href="/" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Atras</a>
    </form>
</div>

